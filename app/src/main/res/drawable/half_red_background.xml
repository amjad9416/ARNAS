<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FF0000" /> <!-- Change this to the desired red color -->
    <item android:top="100dp" android:left="-50dp" android:right="-50dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="#000000" /> <!-- Change this to match the background color of the parent layout -->
            </shape>
        </rotate>
    </item>
</shape>
